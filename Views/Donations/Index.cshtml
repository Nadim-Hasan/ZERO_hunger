@model IEnumerable<ZERO_hunger.EF.Models.Donation>

@{
    ViewBag.Title = "Index for Restaurant";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New Donation", "Create")
</p>
<table class="table">
    <tr>
        <th>
           FoodName
        </th>
        <th>
           Restaurant ID
        </th>
        <th>
           Status
        </th>
        <th>
           Validity
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FoodName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Validity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
           @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
